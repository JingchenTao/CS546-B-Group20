<h1>
    <%= park.name %>
</h1>
<p><strong>位置：</strong>
    <%= park.location %>
</p>
<p><strong>描述：</strong>
    <%= park.description %>
</p>

<% if (user) { %>
    <% if (favorite) { %>
        <a href="/users/unfavorite/<%= park._id %>">取消收藏</a>
        <% } else { %>
            <a href="/users/favorite/<%= park._id %>">收藏公园</a>
            <% } %>
                <% } %>

                    <hr>
                    <h2>评论</h2>
                    <% if (reviews.length===0) { %>
                        <p>还没有评论，快来写第一个评论吧！</p>
                        <% } %>
                            <% reviews.forEach(function(review) { %>
                                <div class="review">
                                    <p><strong>
                                            <%= review.userName %>
                                        </strong> 评分：<%= review.rating %>星</p>
                                    <p>
                                        <%= review.comment %>
                                    </p>
                                    <p><small>
                                            <%= review.date.toLocaleDateString() %>
                                                <%= review.date.toLocaleTimeString() %>
                                        </small></p>
                                    <div class="comments">
                                        <% review.comments.forEach(function(c) { %>
                                            <div class="comment">
                                                <strong>
                                                    <%= c.userName %>
                                                </strong>: <%= c.comment %>
                                            </div>
                                            <% }); %>
                                    </div>
                                    <% if (user) { %>
                                        <form action="/parks/<%= park._id %>/reviews/<%= review._id %>/comments"
                                            method="POST">
                                            <input type="text" name="comment" placeholder="发表评论" required>
                                            <button type="submit">提交</button>
                                        </form>
                                        <% } %>
                                </div>
                                <hr>
                                <% }); %>

                                    <% if (user) { %>
                                        <h3>添加评论</h3>
                                        <form action="/parks/<%= park._id %>/reviews" method="POST">
                                            <label>评分:
                                                <input type="number" name="rating" min="1" max="5" required>
                                            </label><br>
                                            <textarea name="comment" placeholder="写下你的评论..." required></textarea><br>
                                            <button type="submit">提交</button>
                                        </form>
                                        <% } else { %>
                                            <p><a href="/login">登录</a> 后可发表评论。</p>
                                            <% } %>