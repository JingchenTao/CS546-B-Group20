<div class="user-page-wrapper">
  <div class="user-card">

<h1>Login</h1>

{{#if error}}
  <div class="error-message" role="alert" style="color: red; margin-top: 10px;">
    {{error}}
  </div>
{{/if}}

<form class="login-form" method="POST" action="/users/login">
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>
  </div>

  <div class="form-group">
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>
  </div>

  <button type="submit" class="submit-btn">Login</button>
</form>

<div class="register-link" style="margin-top: 15px; text-align: center;">
      <p>If you do not have an account <a href="/users/register">Sign up here</a></p>
    </div>

<script src="/public/js/login.js"></script>

  </div>
</div>