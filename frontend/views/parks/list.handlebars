<div class="parks-list-wrapper">

  <div class="parks-hero">
    <h1>Parks List</h1>
    <p class="subtitle">Browse parks and discover outdoor spaces to explore.</p>
  </div>

  <!-- search and filter-->
  <form id="park-search-form" class="parks-search-bar">
  <input
    type="text"
    name="search"
    placeholder="Search park name..."
  />

  <select name="location">
    <option value="">All Locations</option>
    <option value="M">Manhattan</option>
    <option value="B">Brooklyn</option>
    <option value="Q">Queens</option>
    <option value="X">Bronx</option>
    <option value="R">Staten Island</option>
  </select>

  <select name="type">
    <option value="">All Types</option>
    <option value="Playground">Playground</option>
    <option value="Garden">Garden</option>
    <option value="Neighborhood Park">Neighborhood Park</option>
    <option value="Nature Area">Nature Area</option>
  </select>

  <select name="sort">
    <option value="rating_desc">Rating ↓</option>
    <option value="rating_asc">Rating ↑</option>
    <option value="name_asc">Name A–Z</option>
    <option value="name_desc">Name Z–A</option>
    <option value="reviews_desc">Most Reviews</option>
  </select>

  <button type="submit">Search</button>
</form>


  <div class="parks-grid"></div>

</div>

<script src="/public/js/parkList.js"></script>



